{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "message": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "sender": {
          "type": "string"
        },
        "subject": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "received": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["id", "sender", "subject", "body", "received"]
    }
  },
  "required": ["message"]
}
